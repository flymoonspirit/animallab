<script>
	$('#search-btn').click(function(){
		$searchcontent = $('#searchcontent').val().trim().toLowerCase();
		if($searchcontent.trim() == '' || $searchcontent.trim() == null){
			layer.alert('Please enter the search content.', 3,'warn');
			return ;
		}else{
			if($searchcontent == 'strain'){
				window.location.href = "{:U('Home/Strain/showStrain','','')}";
			}else if($searchcontent == 'survey'){
				window.location.href = "{:U('Home/Survey/showSurvey','','')}";
			}
		}
	});
</script>
<script>
 function selectStrain(){
 		$flag = 0;
		$selectData = [];
		$(".mck").each(function(){
			if($(this).is(':checked') == true){
				$strain = $(this).parent('span').children('span').text();
				$str= urlReplace($strain);
				$selectData.push($str);
				$flag = 1;
			}
		});
		if($flag == 0){
			layer.alert('Please select at least one strain!', 3);
			return ;
		}else{
			$url = "{:U('Home/Strain/showDetailByStrain','','')}?selectStrain="+$selectData.join(',');
			window.location.href = $url;
		}
	
			
	}
 
	 $('.strain-list2').click(function(){
	 	if($(this).children('span').children('input').prop("checked")){
			$(this).children('span').children('input').removeAttr("checked");
			$(this).css("background-image","url(__PUBLIC__/image/strain/mystrain.jpg)");
		}else{
			$(this).children('span').children('input').prop("checked",'true');
			$(this).css("background-image","url(__PUBLIC__/image/strain/mystrain1.jpg)");
		}
	 });
	 
</script>
